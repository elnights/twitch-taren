    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.6.1",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
